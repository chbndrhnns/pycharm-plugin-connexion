{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/betterpy/features.schema.json",
  "title": "BetterPy Feature Declaration",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "id",
    "displayName",
    "description",
    "category",
    "maturity",
    "defaultEnabled",
    "registrations"
  ],
  "properties": {
    "id": {
      "type": "string",
      "minLength": 1
    },
    "displayName": {
      "type": "string",
      "minLength": 1
    },
    "description": {
      "type": "string"
    },
    "category": {
      "type": "string",
      "enum": [
        "TYPE_WRAPPING",
        "ARGUMENTS",
        "CODE_STRUCTURE",
        "ABSTRACT_METHODS",
        "PYTEST",
        "INSPECTIONS",
        "ACTIONS",
        "MCP_TOOLS",
        "COMPLETION",
        "IMPORTS",
        "NAVIGATION",
        "FILTERS",
        "CONNEXION",
        "DOCUMENTATION",
        "OTHER"
      ]
    },
    "maturity": {
      "type": "string",
      "enum": [
        "STABLE",
        "INCUBATING",
        "HIDDEN",
        "DEPRECATED"
      ]
    },
    "youtrackIssues": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "loggingCategories": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "since": {
      "type": "string"
    },
    "removeIn": {
      "type": "string"
    },
    "minBuild": {
      "type": "string"
    },
    "bundledIn": {
      "type": "string"
    },
    "defaultEnabled": {
      "type": "boolean"
    },
    "registrations": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "type",
          "className"
        ],
        "properties": {
          "type": {
            "type": "string"
          },
          "className": {
            "type": "string"
          }
        }
      }
    }
  }
}
