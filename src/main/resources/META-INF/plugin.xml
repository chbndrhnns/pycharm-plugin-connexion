<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <id>com.github.chbndrhnns.intellijplatformplugincopy</id>
    <name>Python DDD Toolkit</name>
    <vendor>chbndrhnns</vendor>

    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.modules.python</depends>

    <resource-bundle>messages.MyBundle</resource-bundle>

    <extensions defaultExtensionNs="com.intellij">
        <psi.referenceContributor language="Python"
                                  implementation="com.github.chbndrhnns.intellijplatformplugincopy.psi.PyMockPatchReferenceContributor"/>
        <psi.referenceContributor language="Python"
                                  implementation="com.github.chbndrhnns.intellijplatformplugincopy.psi.PyFilterWarningsReferenceContributor"/>
        <lang.psiStructureViewFactory language="Python"
                                      implementationClass="com.github.chbndrhnns.intellijplatformplugincopy.structureView.MyPythonStructureViewFactory"
                                      order="first"/>

        <applicationService
                serviceImplementation="com.github.chbndrhnns.intellijplatformplugincopy.settings.PluginSettingsState"/>

        <notificationGroup id="Python DDD Toolkit" displayType="BALLOON" isLogByDefault="true"/>

        <postStartupActivity
                implementation="com.github.chbndrhnns.intellijplatformplugincopy.startup.PythonVersionStartupActivity"/>

        <intentionAction>
            <className>com.github.chbndrhnns.intellijplatformplugincopy.intention.WrapWithExpectedTypeIntention
            </className>
            <category>Type mismatch</category>
        </intentionAction>

        <intentionAction>
            <className>com.github.chbndrhnns.intellijplatformplugincopy.intention.WrapItemsWithExpectedTypeIntention
            </className>
            <category>Type mismatch</category>
        </intentionAction>

        <intentionAction>
            <className>com.github.chbndrhnns.intellijplatformplugincopy.intention.UnwrapToExpectedTypeIntention
            </className>
            <category>Type mismatch</category>
        </intentionAction>

        <intentionAction>
            <className>com.github.chbndrhnns.intellijplatformplugincopy.intention.UnwrapItemsToExpectedTypeIntention
            </className>
            <category>Type mismatch</category>
        </intentionAction>

        <intentionAction>
            <className>com.github.chbndrhnns.intellijplatformplugincopy.intention.IntroduceCustomTypeFromStdlibIntention
            </className>
            <category>Custom types</category>
        </intentionAction>

        <intentionAction>
            <className>com.github.chbndrhnns.intellijplatformplugincopy.intention.populate.PopulateArgumentsIntention
            </className>
            <category>Arguments</category>
        </intentionAction>

        <intentionAction>
            <className>com.github.chbndrhnns.intellijplatformplugincopy.intention.parameterobject.PyIntroduceParameterObjectIntention</className>
            <category>Refactorings</category>
        </intentionAction>

        <!-- Deprecated populate intentions removed -->

        <intentionAction>
            <className>com.github.chbndrhnns.intellijplatformplugincopy.intention.visibility.PyChangeVisibilityIntention
            </className>
            <category>Visibility</category>
        </intentionAction>

        <intentionAction>
            <className>com.github.chbndrhnns.intellijplatformplugincopy.intention.optional.MakeParameterOptionalIntention</className>
            <category>Type hint</category>
        </intentionAction>

        <intentionAction>
            <className>com.github.chbndrhnns.intellijplatformplugincopy.intention.optional.MakeParameterMandatoryIntention</className>
            <category>Type hint</category>
        </intentionAction>


        <intentionAction>
            <className>com.github.chbndrhnns.intellijplatformplugincopy.intention.dictAccess.PyDictAccessIntention</className>
            <category>Dictionaries</category>
        </intentionAction>

        <intentionAction>
            <className>com.github.chbndrhnns.intellijplatformplugincopy.intention.dictAccess.PyTryExceptToDictGetIntention</className>
            <category>Dictionaries</category>
        </intentionAction>

        <intentionAction>
            <className>com.github.chbndrhnns.intellijplatformplugincopy.intention.dictAccess.PyDictGetToTryExceptIntention</className>
            <category>Dictionaries</category>
        </intentionAction>

        <intentionAction>
            <className>com.github.chbndrhnns.intellijplatformplugincopy.intention.exceptions.AddExceptionCaptureIntention</className>
            <category>Exceptions</category>
        </intentionAction>

        <intentionAction>
            <className>com.github.chbndrhnns.intellijplatformplugincopy.intention.abstractmethod.ImplementAbstractMethodInChildClassesIntention</className>
            <category>Refactorings</category>
        </intentionAction>

        <intentionAction>
            <className>com.github.chbndrhnns.intellijplatformplugincopy.intention.exceptions.WrapExceptionsWithParenthesesIntention</className>
            <category>Exceptions</category>
        </intentionAction>

        <intentionAction>
            <className>com.github.chbndrhnns.intellijplatformplugincopy.intention.localvariable.CreateLocalVariableIntention</className>
            <category>Create local variable</category>
        </intentionAction>


        <applicationConfigurable
                displayName="DDD Toolkit"
                id="com.github.chbndrhnns.intellijplatformplugincopy.settings"
                instance="com.github.chbndrhnns.intellijplatformplugincopy.settings.PluginSettingsConfigurable"/>

        <applicationConfigurable
                parentId="com.github.chbndrhnns.intellijplatformplugincopy.settings"
                displayName="Intentions"
                id="com.github.chbndrhnns.intellijplatformplugincopy.settings.intentions"
                instance="com.github.chbndrhnns.intellijplatformplugincopy.settings.IntentionsConfigurable"/>

        <applicationConfigurable
                parentId="com.github.chbndrhnns.intellijplatformplugincopy.settings"
                displayName="Inspections"
                id="com.github.chbndrhnns.intellijplatformplugincopy.settings.inspections"
                instance="com.github.chbndrhnns.intellijplatformplugincopy.settings.InspectionsConfigurable"/>

        <applicationConfigurable
                parentId="com.github.chbndrhnns.intellijplatformplugincopy.settings"
                displayName="Editor Actions"
                id="com.github.chbndrhnns.intellijplatformplugincopy.settings.editoractions"
                instance="com.github.chbndrhnns.intellijplatformplugincopy.settings.EditorActionsConfigurable"/>

        <applicationConfigurable
                parentId="com.github.chbndrhnns.intellijplatformplugincopy.settings"
                displayName="Imports &amp; Project View"
                id="com.github.chbndrhnns.intellijplatformplugincopy.settings.importsprojectview"
                instance="com.github.chbndrhnns.intellijplatformplugincopy.settings.ImportsProjectViewConfigurable"/>

        <localInspection
                language="Python"
                shortName="PyMissingInDunderAllInspection"
                displayName="Symbol not exported in __all__"
                groupPath="Python"
                groupName="Python"
                enabledByDefault="true"
                level="WARNING"
                implementationClass="com.github.chbndrhnns.intellijplatformplugincopy.inspections.PyMissingInDunderAllInspection"/>

        <localInspection
                language="Python"
                shortName="PyPrivateModuleImportInspection"
                displayName="Import from private module when symbol is exported from package"
                groupPath="Python"
                groupName="Python"
                enabledByDefault="true"
                level="WARNING"
                implementationClass="com.github.chbndrhnns.intellijplatformplugincopy.inspections.PyPrivateModuleImportInspection"/>

        <localInspection
                language="Python"
                shortName="PyDataclassMissingInspection"
                displayName="Subclass of a dataclass should also be decorated with @dataclass"
                groupPath="Python"
                groupName="Python"
                enabledByDefault="true"
                level="WARNING"
                implementationClass="com.github.chbndrhnns.intellijplatformplugincopy.inspections.PyDataclassMissingInspection"/>

        <usageFilteringRuleProvider
                implementation="com.github.chbndrhnns.intellijplatformplugincopy.usages.PyTypeAnnotationFilteringRuleProvider"/>

        <consoleFilterProvider implementation="com.github.chbndrhnns.intellijplatformplugincopy.testing.PyMessageFilterProvider"/>

        <searchEverywhereContributor
                implementation="com.github.chbndrhnns.intellijplatformplugincopy.searcheverywhere.PytestIdentifierContributor$Factory"/>
    </extensions>

    <extensions defaultExtensionNs="Pythonid">
        <canonicalPathProvider
                implementation="com.github.chbndrhnns.intellijplatformplugincopy.imports.SourceRootPrefixProvider"/>
        <canonicalPathProvider
                implementation="com.github.chbndrhnns.intellijplatformplugincopy.imports.SpecificImportPathProvider"/>
        <importCandidateProvider
                implementation="com.github.chbndrhnns.intellijplatformplugincopy.imports.RelativeImportCandidateProvider"/>
    </extensions>

    <projectListeners>
        <listener class="com.github.chbndrhnns.intellijplatformplugincopy.listeners.PythonVersionCheckerListener"
                  topic="com.intellij.openapi.roots.ModuleRootListener"/>
    </projectListeners>

    <actions>
        <action id="com.github.chbndrhnns.intellijplatformplugincopy.actions.CopyPackageContentAction"
                class="com.github.chbndrhnns.intellijplatformplugincopy.actions.CopyPackageContentAction"
                text="Copy Package Content"
                description="Copies the content of all files in the selected directory to the clipboard">

            <!-- Add to the Project View context menu (right-click on a folder) -->
            <add-to-group group-id="ProjectViewPopupMenu" anchor="after" relative-to-action="CopyReference"/>
        </action>

        <action id="Python.ShowTypeAnnotations"
                class="com.intellij.openapi.actionSystem.EmptyAction"
                text="Show Type Annotations"
                description="Show references occurring within type hints"
                icon="AllIcons.Nodes.Type">
        </action>

        <action id="com.github.chbndrhnns.intellijplatformplugincopy.intention.parameterobject.PyIntroduceParameterObjectAction"
                class="com.github.chbndrhnns.intellijplatformplugincopy.intention.parameterobject.PyIntroduceParameterObjectAction"
                text="Introduce Parameter Object..."
                description="Introduces a parameter object for the current function">
            <add-to-group group-id="RefactoringMenu" anchor="last"/>
        </action>

        <action id="com.github.chbndrhnns.intellijplatformplugincopy.refactoring.IntroduceParameterObjectRefactoringAction"
                class="com.github.chbndrhnns.intellijplatformplugincopy.refactoring.IntroduceParameterObjectRefactoringAction"
                text="Introduce Parameter Object..."
                description="Introduces a parameter object for the current function">
            <add-to-group group-id="RefactoringMenu" anchor="last"/>
        </action>
        <action id="com.github.chbndrhnns.intellijplatformplugincopy.actions.CopyBuildNumberAction"
                class="com.github.chbndrhnns.intellijplatformplugincopy.actions.CopyBuildNumberAction"
                text="Copy Build Number"
                description="Copies the current IDE build number to the clipboard">
            <add-to-group group-id="HelpMenu" anchor="last"/>
        </action>
        <action id="MyPlugin.CopyBlockWithDependenciesAction"
                class="com.github.chbndrhnns.intellijplatformplugincopy.actions.CopyBlockWithDependenciesAction"
                text="Copy with Dependencies">
            <add-to-group group-id="Copy.Paste.Special" anchor="last"/>
        </action>

        <group id="MyPlugin.CopySpecialGroup" text="Copy Special" popup="true">
            <add-to-group group-id="TestTreePopupMenu" anchor="last"/>
            <action id="MyPlugin.CopyPytestNodeIds"
                    class="com.github.chbndrhnns.intellijplatformplugincopy.actions.CopyPytestNodeIdAction"
                    text="Copy Pytest Node IDs"/>
            <action id="MyPlugin.CopyFQNs"
                    class="com.github.chbndrhnns.intellijplatformplugincopy.actions.CopyFQNAction"
                    text="Copy FQNs"/>
            <action id="MyPlugin.CopyStacktrace"
                    class="com.github.chbndrhnns.intellijplatformplugincopy.actions.CopyStacktraceAction"
                    text="Copy Stacktrace"/>
        </group>
    </actions>
</idea-plugin>
